<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:lab="it.designfuture.chartjs"
    xmlns:acc="cz.muni.fi.pb138.mobilePresence.control"
    controllerName="cz.muni.fi.pb138.mobilePresence.controller.Detail">
    <Page showNavButton="{device>/system/phone}"
          navButtonPress="onNavBack">
        <ObjectHeader 
            title="{name}"
            condensed="true">
            <attributes>
                <ObjectAttribute text="{path:'type', formatter:'.formatter.i18nText'}"/>
            </attributes>
        </ObjectHeader>
        <Text text="{format_chartjs>/lineData/labels/}"/>
        <acc:ChartJSControl 
            id = "chartId"
            width="400" height="200" responsive="true" chartType="Line" 
            data="{parts: [
                            {path: 'format_chartjs>/'},
                            {path: ''},
                            {path: 'i18n>workday'},
                            {path: 'i18n>weekend'}
                        ],
                        formatter:'.formatter.chartProperties'}"
            options="{
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }"/> 
    </Page>
</mvc:View>